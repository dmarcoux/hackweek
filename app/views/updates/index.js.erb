$('#updates').append("<%= escape_javascript render partial: "updates/more", locals: { updates: @updates } %>");
$('#load-more-link').attr('href', '<%= raw updates_path(page: @next_page, project_id: @project.try(:id), user_id: @user.try(:id)) %>');
$('#UpdatesModal').animate({scrollTop: $("#modal-bottom").offset().top}, 1000);
<% if @last_page %>
  $('#load-more-link').hide();
<% end %>

